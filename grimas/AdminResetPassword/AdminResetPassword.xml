<GrimaForm>
	<Title>Grima: Reset Password</Title>
	<Field
		name="username"
		label="Username:"
		autocomplete="on"
		required="yes"
		placeholder="User's login..."
	/>
	<Field
		name="password"
		label="New Password:"
		type="password"
		autocomplete="off"
		required="yes"
		placeholder="Their NEW Grima password..."
	/>
	<Field
		name="institution"
		label="Institution:"
		autocomplete="on"
		required="no"
		placeholder="Institution..."
		persistent="yes"
	/>
	<Field
		name="redirect_url"
		type="hidden"
		required="no"
	/>
</GrimaForm>
