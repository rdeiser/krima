<GrimaForm>
	<Title>Grima: Append to Note</Title>
	<Field
		name="set_id"
		label="Set ID"
		shortname="s"
		autocomplete="off"
		required="yes"
		placeholder="Set of items"
	/>
	<Field
        name="whichnote"
        label="Note Field:"
        type="select"
        required="yes"
        placeholder="Example: Internal Note 1"
        >
        <option value="internal_note_1">Internal Note 1</option>
        <option value="internal_note_2">Internal Note 2</option>
        <option value="internal_note_3">Internal Note 3</option>
        <option value="statistics_note_1">Statistics Note 1</option>
        <option value="statistics_note_2">Statistics Note 2</option>
        <option value="statistics_note_3">Statistics Note 3</option>
    </Field>
	<Field
		name="note"
		label="Note"
		shortname="n"
		autocomplete="off"
		required="yes"
		placeholder="Note to append"
	/>
</GrimaForm>
