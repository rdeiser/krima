		name="barcode"
		label="Barcode"
		autocomplete="off"
		required="yes"
		placeholder="Barcode"
	/>
	<field
	name="op"
	required="no"
	visible="no"
	/>
	<field
	name="circ_desk"
	required="no"
	visible="no"
	/>
	<field
	name="workorder"
	required="no"
