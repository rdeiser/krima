<GrimaForm>
    <Title>ScanInReturn</Title>
	<Field
	name="library"
	label="Library Circ Desk"
	type="select"
	required="yes"
	placeholder="Circ Desk"
	>
	<option value="MAIN">Hale Library</option>
	<option value="ARCH">Paul Weigel Library of Architecture, Planning, Design</option>
	<option value="MATHPHYS">Math/Physics Library</option>
	</Field>
	<Field
	name="hold"
	label="Place on Hold Shelf:"
	type="select"
	requiered="yes"
	>
	<option value="false">No</option>
	<option value="true">Yes</option>
	</Field>
	<Field
	name="done"
	label="Done"
	type="select"
	requiered="yes"
	>
	<option value="false">No</option>
	<option value="true">Yes</option>
	</Field>
	<Field
	class="radios"
	legend="Register in-house use"
	name="house"
	id="house-yes"
	type="radio"
	value="true"
	required="no"
	label="Yes"
	/>
