<GrimaForm>
	<Title>Grima: Login</Title>
	<Field
		name="username"
		label="Username:"
		autocomplete="on"
		required="yes"
		placeholder="Your GRIMA ID..."
	/>
	<Field
		name="password"
		label="Password:"
		type="password"
		autocomplete="off"
		required="yes"
		placeholder="Your GRIMA password..."
	/>
	<Field
		name="institution"
		label="Institution:"
        required="yes"
		type="select"
		>
		<option value="Kansas State University">Kansas State Univeristy</option>
		<option value="Sandbox">Sandbox</option>
		<option value="Production">Production</option>
		</Field>
	<Field
		name="redirect_url"
		type="hidden"
		required="no"
	/>
</GrimaForm>
